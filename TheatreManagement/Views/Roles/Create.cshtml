@model TheatreManagement.Models.Role
@{
    ViewBag.Title = "Create";
}
<h3 class="display-4">Add New Role</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.RoleTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.EditorFor(model => model.RoleTitle, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
            </div>
            <div class="col-md-4">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary btn-sm mt-2">Save</button>
            </div>
        </div>
    </div>
}
<div>
    
    <a href="@Url.Action("Index","Roles")" class="btn btn-link btn-sm" style="text-decoration:none;"><i class="fa fa-arrow-circle-left"></i> Back to list</a>
</div>